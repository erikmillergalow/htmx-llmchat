{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "$(go env GOPATH)/bin/templ generate && go build -o ./src-tauri/binaries/main-aarch64-apple-darwin . && go build -o ./src-tauri/binaries/x86_64-apple-darwin . && go build -o ./src-tauri/binaries/main-x86_64-unknown-linux-gnu .",
    "beforeDevCommand": "$(go env GOPATH)/bin/templ generate && go build -o ./src-tauri/binaries/main-aarch64-apple-darwin .",
    "devPath": "http://127.0.0.1:8090",
    "distDir": "../pb_public"
  },
  "package": {
    "productName": "HTMXLLMChat",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true,
        "sidecar": true,
        "scope": [
          { 
            "name": "binaries/main",
            "sidecar": true,
            "args": [
              "serve",
              "-http"
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "binaries/main"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.htmxllmchat.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "appimage",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "HTMXLLMChat",
        "width": 1000,
        "transparent": true
      }
    ]
  }
}
